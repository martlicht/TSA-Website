---
import Layout from "../layouts/Layout.astro";
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";
import SectionContainer from "../components/ui/SectionContainer.astro";
import Button from "../components/ui/Button.astro";
---

<Layout title="Page Not Found - Tri State Awnings">
  <Header />
  
  <!-- 404 Section -->
  <section class="relative w-full min-h-screen bg-gradient-to-br from-slate-800 to-slate-700 flex items-center justify-center overflow-hidden pt-20 pb-16">
    <!-- Decorative Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-64 h-64 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
    </div>
    
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
    
    <SectionContainer class="relative z-10 text-white text-center">
      <!-- 404 Number -->
      <div class="error-number-container mb-6 sm:mb-8 md:mb-10">
        <h1 class="error-number">404</h1>
      </div>
      
      <!-- Error Message -->
      <div class="error-content max-w-3xl mx-auto px-4">
        <h2 class="error-title mb-4 sm:mb-6">
          Oops! Page Not Found
        </h2>
        <p class="error-description mb-8 sm:mb-10 md:mb-12">
          The page you're looking for seems to have rolled up and disappeared.<br class="hidden sm:block" />
          Let's get you back on track.
        </p>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 sm:mb-16 md:mb-20">
          <Button 
            variant="primary" 
            size="lg" 
            href="/"
            class="w-full sm:w-auto min-w-[200px]"
          >
            Go to Homepage
          </Button>
          <Button 
            variant="outline" 
            size="lg" 
            href="/#contact-form-section"
            class="w-full sm:w-auto min-w-[200px] border-2 border-white text-white hover:bg-white hover:text-slate-800"
          >
            Contact Us
          </Button>
        </div>
        
        <!-- Helpful Links -->
        <div class="helpful-links pt-8 sm:pt-10 border-t border-white/20">
          <p class="text-base sm:text-lg text-white/80 mb-6 font-medium">Looking for something specific?</p>
          <div class="flex flex-wrap gap-3 sm:gap-4 justify-center max-w-2xl mx-auto">
            <a href="/awnings" class="helpful-link">
              Awnings
            </a>
            <a href="/#products-section" class="helpful-link">
              Products
            </a>
            <a href="/#choose-product-section" class="helpful-link">
              Choose Product
            </a>
            <a href="/gallery" class="helpful-link">
              Gallery
            </a>
            <a href="/#contact-form-section" class="helpful-link">
              Get a Quote
            </a>
          </div>
        </div>
      </div>
    </SectionContainer>
  </section>

  <Footer />
</Layout>

<style>
  /* Error Number */
  .error-number-container {
    position: relative;
  }

  .error-number {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 800;
    font-size: 7rem;
    line-height: 0.9;
    letter-spacing: -0.04em;
    color: #ffffff;
    text-shadow: 
      0 0 60px rgba(104, 194, 140, 0.4),
      0 10px 30px rgba(0, 0, 0, 0.3);
    animation: float 3s ease-in-out infinite;
    margin: 0;
  }

  @media (min-width: 640px) {
    .error-number {
      font-size: 10rem;
    }
  }

  @media (min-width: 768px) {
    .error-number {
      font-size: 12rem;
    }
  }

  @media (min-width: 1024px) {
    .error-number {
      font-size: 14rem;
    }
  }

  /* Float Animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Error Title */
  .error-title {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 700;
    font-size: 1.75rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: #ffffff;
  }

  @media (min-width: 640px) {
    .error-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 768px) {
    .error-title {
      font-size: 2.75rem;
    }
  }

  @media (min-width: 1024px) {
    .error-title {
      font-size: 3.25rem;
    }
  }

  /* Error Description */
  .error-description {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.7;
    letter-spacing: -0.005em;
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 640px) {
    .error-description {
      font-size: 1.125rem;
      line-height: 1.75;
    }
  }

  @media (min-width: 768px) {
    .error-description {
      font-size: 1.25rem;
    }
  }

  /* Helpful Links */
  .helpful-link {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #68c28c;
    text-decoration: none;
    padding: 0.625rem 1.25rem;
    border-radius: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1.5px solid rgba(104, 194, 140, 0.4);
    display: inline-block;
    background-color: rgba(104, 194, 140, 0.05);
  }

  @media (min-width: 640px) {
    .helpful-link {
      font-size: 0.9375rem;
      padding: 0.75rem 1.5rem;
    }
  }

  .helpful-link:hover {
    background-color: rgba(104, 194, 140, 0.15);
    border-color: #68c28c;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(104, 194, 140, 0.2);
  }

  .helpful-link:active {
    transform: translateY(-1px);
  }

  /* Content Animation */
  .error-content {
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
