---
import ProductCard from '../../ui/ProductCard.astro';
import awningImage from '../../../assets/images/awning.webp';
import pergolofImage from '../../../assets/images/pergolof.webp';
import sukkahImage from '../../../assets/images/sukkah.webp';

interface Product {
	title: string;
	description: string;
	image: typeof awningImage;
	href: string;
	showIcon?: boolean;
	isExternal?: boolean;
}

const products: Product[] = [
	{
		title: 'Awnings',
		description: 'Retractable and stationary awnings that provide instant shade and weather protection.',
		image: awningImage,
		href: '/awnings',
		showIcon: false,
		isExternal: false,
	},
	{
		title: 'Pergoloft',
		description: 'A modern pergola-style system that opens and closes smoothly, giving you sun, shade or rain protection with an elegant design.',
		image: pergolofImage,
		href: 'https://tristateawnings.com/pergoloft/',
		showIcon: true,
		isExternal: true,
	},
	{
		title: 'The Instant Sukkah',
		description: 'A ready-made Sukkah that sets up in seconds and stays sturdy, offering a beautiful space for a stress-free holiday.',
		image: sukkahImage,
		href: 'https://theinstantsukkah.com/',
		showIcon: true,
		isExternal: true,
	},
];
---

<section class="py-12 sm:py-16 md:py-20 lg:py-24 bg-white">
	<div class=" mx-auto px-12 sm:px-6 md:px-8 lg:px-20">
		<!-- Headline -->
		<h2 class="products-headline scroll-fade-in text-center mb-8 sm:mb-12 md:mb-16">
			The Most Innovative{' '}
			<span class="text-primary">Awning</span> and{' '}
			<span class="text-primary">Sukkah</span>
			<br />
			Company.
		</h2>

		<!-- Products Grid -->
		<div class="products-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-10">
			{products.map((product, index) => (
				<div class="scroll-fade-in h-full" style={`animation-delay: ${index * 100}ms;`}>
					<ProductCard
						title={product.title}
						description={product.description}
						image={product.image}
						href={product.href}
						showIcon={product.showIcon}
						isExternal={product.isExternal}
						class="h-full"
					/>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Headline Typography - Figma Properties */
	.products-headline {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 500; /* Medium */
		font-style: normal;
		font-size: 2rem; /* 32px - responsive for mobile */
		line-height: 130%; /* Figma: 130% */
		letter-spacing: -0.02em; /* -2% */
		color: #000000;
		text-align: center; /* Figma: Center */
		vertical-align: middle; /* Figma: Middle */
	}

	@media (min-width: 640px) {
		.products-headline {
			font-size: 2.5rem; /* 40px - responsive for tablet */
		}
	}

	@media (min-width: 1024px) {
		.products-headline {
			font-size: 48px; /* Figma: 48px */
		}
	}

	/* Products Grid - Ensure cards stretch to full height */
	.products-grid {
		align-items: stretch;
	}

</style>

