---
import ProductCard from '../../ui/ProductCard.astro';
import SectionContainer from '../../ui/SectionContainer.astro';
import awningImage from '../../../assets/images/awning.webp';
import pergoloftImage from '../../../assets/images/pergoloft/pergoloft-image.webp';
import sukkahImage from '../../../assets/images/sukkah.webp';

interface Product {
	title: string;
	description: string;
	image: typeof awningImage;
	href: string;
	showIcon?: boolean;
	isExternal?: boolean;
}

const products: Product[] = [
	{
		title: 'Awnings',
		description: 'Durable, roll-up awnings that extend and roll away smoothly to keep your outdoor space cool, comfortable, and protected.',
		image: awningImage,
		href: '/awnings',
		showIcon: false,
		isExternal: false,
	},
	{
		title: 'Pergoloft',
		description: 'A premium glass pergola system that floods your space with natural light while providing complete weather protection year-round.',
		image: pergoloftImage,
		href: '/pergoloft',
		showIcon: false,
		isExternal: false,
	},
	{
		title: 'The Instant Sukkah',
		description: 'A ready-made Sukkah that sets up in seconds and stays sturdy, offering a beautiful space for a stress-free holiday.',
		image: sukkahImage,
		href: 'https://theinstantsukkah.com/',
		showIcon: true,
		isExternal: true,
	},
];
---

<section id="products-section" class="py-12 sm:py-16 md:py-20 lg:py-24 bg-white">
	<SectionContainer>
		<!-- Headline -->
		<h2 class="scroll-fade-in text-center font-medium text-[2rem] sm:text-[2.5rem] lg:text-[48px] leading-[130%] tracking-[-0.02em] mb-8 sm:mb-12 md:mb-16">
			The Most Innovative{' '}
			<span class="text-primary">Awning</span> and{' '}
			<span class="text-primary">Sukkah</span>
			<br />
			Company.
		</h2>

		<!-- Products Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-[34px] items-stretch">
			{products.map((product, index) => (
				<div class="scroll-fade-in h-full" style={`animation-delay: ${index * 100}ms;`}>
					<ProductCard
						title={product.title}
						description={product.description}
						image={product.image}
						href={product.href}
						showIcon={product.showIcon}
						isExternal={product.isExternal}
						class="h-full"
					/>
				</div>
			))}
		</div>
	</SectionContainer>
</section>


