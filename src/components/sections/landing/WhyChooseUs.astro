---
import { Image } from 'astro:assets';
import SectionContainer from '../../ui/SectionContainer.astro';
import porchImage from '../../../assets/images/porch.svg';
import licensedIcon from '../../../assets/icons/licensed.svg';
import premiumIcon from '../../../assets/icons/premium.svg';
import quickIcon from '../../../assets/icons/quick.svg';

interface Feature {
	title: string;
	description: string;
	icon: string;
}

const features: Feature[] = [
	{
		title: 'Licensed and Expertise',
		description: 'Professional installation by certified local experts',
		icon: licensedIcon.src,
	},
	{
		title: 'Premium Fabrics, Built to Last',
		description: 'High-quality materials with comprehensive warranties',
		icon: premiumIcon.src,
	},
	{
		title: 'Quick delivery and Assembly',
		description: 'Our process ensures your awning is ready to enjoy in no time.',
		icon: quickIcon.src,
	},
];
---

<section class="py-12 sm:py-16 md:py-20 lg:py-24 ">
	<SectionContainer>
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
			<!-- Left Content -->
			<div class="space-y-8">
				<!-- Headline -->
				<div class="space-y-4">
					<h2 class="why-choose-headline scroll-fade-in">
						Why Choose Us?
					</h2>
					<p class="why-choose-subtext text-gray-600">
						Strength you can count on. Beauty you'll love. Backed by two decades of excellence.
					</p>
				</div>

				<!-- Features List -->
				<div class="space-y-6">
					{features.map((feature, index) => (
						<div 
							class="feature-item scroll-fade-in flex items-start gap-4"
							style={`animation-delay: ${index * 100}ms;`}
						>
							<!-- Icon -->
							<div class="feature-icon-container flex-shrink-0">
								<img 
									src={feature.icon} 
									alt={feature.title}
									class="w-16 h-16 sm:w-20 sm:h-20"
								/>
							</div>

							<!-- Text Content -->
							<div class="flex-1">
								<h3 class="feature-title text-lg sm:text-xl font-semibold text-gray-900 mb-2">
									{feature.title}
								</h3>
								<p class="feature-description text-sm sm:text-base text-gray-600">
									{feature.description}
								</p>
							</div>
						</div>
					))}
				</div>
			</div>

			<!-- Right Image -->
			<div class="scroll-fade-in lg:order-last order-first">
				<div class="relative rounded-2xl overflow-hidden shadow-xl">
					<img 
						src={porchImage.src}
						alt="Beautiful outdoor porch with awning"
						class="w-full h-auto object-cover"
					/>
				</div>
			</div>
		</div>
	</SectionContainer>
</section>

<style>
	/* Headline Typography */
	.why-choose-headline {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 600; /* Semi Bold */
		font-style: normal;
		font-size: 2rem; /* 32px - responsive for mobile */
		line-height: 120%;
		letter-spacing: -0.02em; /* -2% */
		color: #000000;
	}

	@media (min-width: 640px) {
		.why-choose-headline {
			font-size: 2.5rem; /* 40px */
		}
	}

	@media (min-width: 1024px) {
		.why-choose-headline {
			font-size: 3rem; /* 48px */
		}
	}

	/* Subtext Typography */
	.why-choose-subtext {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 400; /* Regular */
		font-style: normal;
		font-size: 1rem; /* 16px */
		line-height: 150%;
		letter-spacing: -0.002em; /* -0.2% */
	}

	@media (min-width: 640px) {
		.why-choose-subtext {
			font-size: 1.125rem; /* 18px */
		}
	}

	/* Feature Title Typography */
	.feature-title {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 600; /* Semi Bold */
		font-style: normal;
		line-height: 130%;
		letter-spacing: -0.01em; /* -1% */
	}

	/* Feature Description Typography */
	.feature-description {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 400; /* Regular */
		font-style: normal;
		line-height: 150%;
		letter-spacing: -0.002em; /* -0.2% */
	}

	/* Feature Icon Container */
	.feature-icon-container {
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: #F3F4F6; /* Light gray background */
		border-radius: 12px;
		padding: 0.75rem;
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.feature-item:hover .feature-icon-container {
		transform: scale(1.05);
	}

	/* Animations handled by global Layout.astro scroll-fade-in system */
</style>

