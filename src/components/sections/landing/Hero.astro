---
import Button from '../../ui/Button.astro';
import SectionContainer from '../../ui/SectionContainer.astro';
import { SITE_CONFIG } from '../../../config/site';
import heroBackground from '../../../assets/images/hero-background.webp';
---

<section
	class="relative w-full h-[70vh] sm:h-[80vh] md:h-[90vh] min-h-[500px] sm:min-h-[600px] bg-gradient-to-br from-slate-800 to-slate-700 bg-cover bg-center bg-no-repeat flex items-end py-12 sm:py-16"
	style={`background-image: url(${heroBackground.src});`}
>
	<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
	<SectionContainer class="relative z-10 text-white pb-6 sm:pb-8">
		<h1 class="hero-title hero-fade-in text-3xl sm:text-4xl md:text-5xl lg:text-[64px] font-semibold mb-4 sm:mb-6 max-w-4xl">
			Unlock the True Potential of your Outdoor Space
		</h1>
		<p class="hero-description hero-fade-in text-sm sm:text-base md:text-lg lg:text-[20px] mb-6 sm:mb-8 max-w-2xl opacity-95" style="animation-delay: 0.2s;">
			{SITE_CONFIG.description}
		</p>
		<div class="hero-fade-in flex flex-col sm:flex-row gap-3 sm:gap-4" style="animation-delay: 0.4s;">
			<Button variant="primary" size="lg" class="w-full sm:w-auto">
				Get Yours Today
			</Button>
			<Button variant="outline" size="lg" class="w-full sm:w-auto">
				Learn More
			</Button>
		</div>
	</SectionContainer>
</section>

<style>
	/* Hero-specific fade in animation - always triggers on page load */
	.hero-fade-in {
		opacity: 0;
		transform: translateY(20px);
		animation: heroFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
	}

	@keyframes heroFadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero-title {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 600; /* Semi Bold */
		font-style: normal;
		line-height: 110%;
		letter-spacing: -0.02em; /* -2% */
		vertical-align: middle;
	}

	@media (min-width: 1024px) {
		.hero-title {
			font-size: 64px;
		}
	}

	.hero-description {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 500; /* Medium */
		font-style: normal;
		line-height: 140%;
		letter-spacing: -0.005em; /* -0.5% */
		vertical-align: middle;
	}

	@media (min-width: 1024px) {
		.hero-description {
			font-size: 20px;
		}
	}
</style>

