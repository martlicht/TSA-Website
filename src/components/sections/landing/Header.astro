---
import Logo from '../../ui/Logo.astro';
import Button from '../../ui/Button.astro';
import { NAV_ITEMS } from '../../../utils/constants';
---

<header class="bg-white px-4 md:px-8 py-4 shadow-md sticky top-0 z-50">
	<div class="max-w-7xl mx-auto flex items-center justify-between gap-8 flex-wrap">
		<Logo size="md" />
		
		<nav class="flex gap-8 flex-1 md:order-none order-3 w-full md:w-auto md:justify-center justify-around text-sm md:text-base">
			{NAV_ITEMS.map((item) => (
				<a
					href={item.href}
					class="text-gray-900 font-medium hover:text-primary transition-colors no-underline"
				>
					{item.label}
				</a>
			))}
		</nav>
		
		<Button variant="primary" size="md" class="md:order-none order-2">
			Get a Quote
		</Button>
	</div>
</header>

