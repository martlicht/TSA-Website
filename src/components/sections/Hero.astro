---
import Button from '../ui/Button.astro';
import { SITE_CONFIG } from '../../config/site';
import heroBackground from '../../assets/images/hero-background.webp';
---

<section
	class="relative w-full h-[90vh] min-h-[600px] bg-gradient-to-br from-slate-800 to-slate-700 bg-cover bg-center bg-no-repeat flex items-end px-4 md:px-8 py-16 md:py-16"
	style={`background-image: url(${heroBackground.src});`}
>
	<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
	<div class="relative z-10 max-w-7xl w-full mx-auto text-white pb-8">
		<h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight mb-6 max-w-4xl">
			Unlock the True Potential of your Outdoor Space
		</h1>
		<p class="text-base md:text-lg lg:text-xl leading-relaxed mb-8 max-w-2xl opacity-95">
			{SITE_CONFIG.description}
		</p>
		<div class="flex gap-4 flex-wrap md:flex-nowrap">
			<Button variant="primary" size="lg" class="w-full md:w-auto">
				Get Yours Today
			</Button>
			<Button variant="outline" size="lg" class="w-full md:w-auto">
				Learn More
			</Button>
		</div>
	</div>
</section>

