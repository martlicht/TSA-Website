---
import Logo from "../ui/Logo.astro";
import Button from "../ui/Button.astro";
import { NAV_ITEMS } from "../../utils/constants";
---

<header id="main-header" class="header-wrapper bg-white shadow-md sticky top-0 z-50">
  <div class="bg-white px-4 md:px-16 py-2.5 md:py-4">
    <div class="w-full flex items-center justify-between gap-4">
      <a href="/" class="flex items-center" aria-label="Go to home">
        <Logo size="sm" />
      </a>

      <!-- Desktop Navigation -->
      <section class="hidden md:flex items-center gap-8 flex-1 justify-end">
        <nav class="flex gap-6 lg:gap-8 items-center">
          {
            NAV_ITEMS.map((item) => (
              <a
                href={item.href}
                data-astro-prefetch={item.isExternal ? undefined : "hover"}
                target={item.isExternal ? "_blank" : undefined}
                rel={item.isExternal ? "noopener noreferrer" : undefined}
                class="nav-item text-gray-900 font-medium hover:text-primary transition-colors no-underline"
              >
                {item.label}
              </a>
            ))
          }
        </nav>

        <Button variant="primary" size="md" class="ml-4" href="/#contact-form-section"> Get a Quote </Button>
      </section>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-900 hover:text-primary transition-all duration-300"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 relative" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path 
            id="menu-icon" 
            class="menu-icon transition-all duration-300"
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16M4 18h16" 
          />
          <path 
            id="close-icon" 
            class="close-icon transition-all duration-300 opacity-0 absolute inset-0"
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M6 18L18 6M6 6l12 12" 
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav
      id="mobile-menu"
      class="mobile-menu md:hidden mt-4 pb-4 border-t border-gray-200"
    >
      <div class="mobile-menu-content flex flex-col gap-4 pt-4">
        {
          NAV_ITEMS.map((item, index) => (
            <a
              href={item.href}
              data-astro-prefetch={item.isExternal ? undefined : "hover"}
              target={item.isExternal ? "_blank" : undefined}
              rel={item.isExternal ? "noopener noreferrer" : undefined}
              class="mobile-menu-item nav-item text-gray-900 font-medium hover:text-primary no-underline py-2"
              style={`transition-delay: ${index * 50}ms;`}
            >
              {item.label}
            </a>
          ))
        }
        <div class="mobile-menu-item" style="transition-delay: 250ms;">
          <Button variant="primary" size="md" class="w-full mt-2" href="/#contact-form-section"> Get a Quote </Button>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  /* Aplicar propiedades tipográficas consistentes a los items del nav */
  .nav-item {
    font-family: "Inter", system-ui, sans-serif;
    font-weight: 500; /* Medium */
    font-style: normal;
    font-size: 16px;
    line-height: 145%;
    letter-spacing: -0.5%;
    vertical-align: middle;
    position: relative;
    display: inline-block;
  }

  /* Línea animada debajo del nav item */
  .nav-item::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #68C28C; /* Color primary */
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-item:hover::after,
  .nav-item.active::after {
    transform: scaleX(1);
  }

  @media (max-width: 768px) {
    .nav-item {
      font-size: 16px; /* Mantener tamaño legible en mobile */
      display: block;
    }
  }

  /* Animación del header optimizada para performance */
  .header-wrapper {
    will-change: transform;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateY(calc(var(--header-offset, 0) * -100%));
  }

  /* Animaciones del menú móvil - Solo aplicar en móvil */
  @media (max-width: 768px) {
    .mobile-menu {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .mobile-menu.open {
      max-height: 600px !important;
    }

    .mobile-menu-content {
      opacity: 0;
      transition: opacity 0.3s ease 0.2s;
    }

    .mobile-menu.open .mobile-menu-content {
      opacity: 1 !important;
    }

    .mobile-menu-item {
      transform: translateX(-20px) !important;
      opacity: 0 !important;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s ease !important;
    }

    .mobile-menu.open .mobile-menu-item {
      transform: translateX(0) !important;
      opacity: 1 !important;
    }
  }

  /* Animaciones de los iconos del botón hamburguesa - Solo en móvil */
  @media (max-width: 768px) {
    .menu-icon {
      opacity: 1;
      transform: rotate(0deg);
      transition: opacity 0.2s ease, transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .mobile-menu-button-open .menu-icon {
      opacity: 0;
      transform: rotate(90deg);
    }

    .close-icon {
      opacity: 0;
      transform: rotate(-90deg);
      transition: opacity 0.2s ease 0.1s, transform 0.3s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
    }

    .mobile-menu-button-open .close-icon {
      opacity: 1;
      transform: rotate(0deg);
    }
  }
</style>

<script>
  // Versión ultra-optimizada usando CSS custom properties
  // Solo actualiza una variable CSS en lugar de manipular clases
  (function() {
    const header = document.getElementById('main-header');
    if (!header) return;

    let lastScrollY = window.scrollY;
    let ticking = false;
    let isHidden = false;

    function updateHeader() {
      if (!header) return;
      
      const currentScrollY = window.scrollY;
      const scrollDelta = currentScrollY - lastScrollY;
      
      // Solo procesar cambios significativos (>5px)
      if (Math.abs(scrollDelta) < 5) {
        ticking = false;
        return;
      }

      const shouldHide = currentScrollY > 100 && scrollDelta > 0;
      
      if (shouldHide !== isHidden) {
        isHidden = shouldHide;
        header.style.setProperty('--header-offset', isHidden ? '1' : '0');
      }

      lastScrollY = currentScrollY;
      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(updateHeader);
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });

    // Smooth scroll progresivo para anchors internos
    function scrollToAnchor(hash: string) {
      const element = document.getElementById(hash);
      if (!element || !header) return;
      
      const headerOffset = header.offsetHeight;
      const elementPosition = element.getBoundingClientRect().top;
      const offsetPosition = elementPosition + window.pageYOffset - headerOffset - 20;
      const startPosition = window.pageYOffset;
      const distance = offsetPosition - startPosition;
      const duration = Math.min(Math.max(Math.abs(distance) * 0.8, 800), 2000); // Entre 800ms y 2000ms según distancia
      let startTime: number | null = null;
      
      // Función de easing suave (ease-in-out-cubic)
      function easeInOutCubic(t: number): number {
        return t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
      }
      
      function animateScroll(currentTime: number) {
        if (startTime === null) startTime = currentTime;
        const timeElapsed = currentTime - startTime;
        const progress = Math.min(timeElapsed / duration, 1);
        
        // Aplicar easing
        const easedProgress = easeInOutCubic(progress);
        const currentPosition = startPosition + (distance * easedProgress);
        
        window.scrollTo(0, currentPosition);
        
        if (progress < 1) {
          requestAnimationFrame(animateScroll);
        }
      }
      
      requestAnimationFrame(animateScroll);
    }

    function handleAnchorClick(e: Event) {
      const target = e.target as HTMLElement;
      // Buscar el enlace más cercano (puede ser el mismo elemento o un padre)
      const link = target.closest('a') as HTMLAnchorElement;
      if (!link || !link.href) return;
      
      const url = new URL(link.href);
      // Solo manejar si es el mismo origen y tiene hash
      if (url.origin === window.location.origin && url.hash) {
        const hash = url.hash.substring(1);
        const element = document.getElementById(hash);
        
        if (element) {
          e.preventDefault();
          e.stopPropagation();
          scrollToAnchor(hash);
        }
      }
    }

    // Agregar listeners a todos los links de navegación y botones con href
    const navLinks = document.querySelectorAll('.nav-item, a[href*="#"]');
    navLinks.forEach(link => {
      link.addEventListener('click', handleAnchorClick);
    });
    
    // También capturar clics en botones que puedan tener href (como Button component)
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      const button = target.closest('a[href*="#"]') as HTMLAnchorElement;
      if (button && button.href) {
        const url = new URL(button.href);
        if (url.origin === window.location.origin && url.hash) {
          const hash = url.hash.substring(1);
          const element = document.getElementById(hash);
          if (element) {
            e.preventDefault();
            e.stopPropagation();
            scrollToAnchor(hash);
          }
        }
      }
    }, true);

    // Manejar scroll después de transiciones de página de Astro
    function handlePageLoad() {
      const hash = window.location.hash.substring(1);
      if (hash) {
        // Esperar a que el DOM esté completamente cargado y las transiciones terminen
        setTimeout(() => {
          scrollToAnchor(hash);
        }, 300);
      }
    }

    // Escuchar eventos de Astro View Transitions
    document.addEventListener('astro:page-load', handlePageLoad);
    
    // También manejar en carga inicial
    if (window.location.hash) {
      setTimeout(() => {
        handlePageLoad();
      }, 100);
    }

    // Mobile menu toggle con animaciones suaves
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      function toggleMenu() {
        if (!mobileMenu || !mobileMenuButton) return;
        
        const isOpen = mobileMenu.classList.contains('open');
        
        if (isOpen) {
          // Cerrar menú
          mobileMenu.classList.remove('open');
          mobileMenuButton.classList.remove('mobile-menu-button-open');
        } else {
          // Abrir menú
          mobileMenu.classList.add('open');
          mobileMenuButton.classList.add('mobile-menu-button-open');
        }
      }

      mobileMenuButton.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleMenu();
      });

      // Cerrar menú al hacer clic en un link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          setTimeout(() => {
            if (mobileMenu && mobileMenu.classList.contains('open')) {
              toggleMenu();
            }
          }, 100);
        });
      });

      // Cerrar menú al hacer clic fuera
      document.addEventListener('click', (e) => {
        if (!mobileMenu || !mobileMenuButton) return;
        
        const target = e.target as Node;
        if (
          mobileMenu.classList.contains('open') &&
          !mobileMenu.contains(target) &&
          !mobileMenuButton.contains(target)
        ) {
          toggleMenu();
        }
      });
    }
  })();
</script>
