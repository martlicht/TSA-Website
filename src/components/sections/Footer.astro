---
import Logo from '../ui/Logo.astro';
import { NAV_ITEMS } from '../../utils/constants';
import { SITE_CONFIG } from '../../config/site';
---

<footer class="bg-gray-900 text-gray-300 py-8 sm:py-12 px-4 sm:px-6 md:px-16">
	<div class="max-w-7xl mx-auto">
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 mb-6 sm:mb-8">
			<!-- Logo y descripción -->
			<div class="scroll-fade-in sm:col-span-2 lg:col-span-2">
				<Logo size="md" loading="lazy" />
				<p class="mt-4 text-sm sm:text-base text-gray-400 max-w-md">
					{SITE_CONFIG.description}
				</p>
			</div>
			
			<!-- Navegación -->
			<div class="scroll-fade-in-subtle">
				<h3 class="text-white font-semibold mb-3 sm:mb-4 text-base sm:text-lg">Navigation</h3>
				<nav class="flex flex-col gap-2">
					{NAV_ITEMS.map((item) => (
						<a
							href={item.href}
							data-astro-prefetch="hover"
							class="text-sm sm:text-base hover:text-primary transition-colors"
						>
							{item.label}
						</a>
					))}
				</nav>
			</div>
			
			<!-- Contacto -->
			<div class="scroll-fade-in-subtle">
				<h3 class="text-white font-semibold mb-3 sm:mb-4 text-base sm:text-lg">Contact</h3>
				<p class="text-sm sm:text-base text-gray-400">Get in touch with us</p>
			</div>
		</div>
		
		<!-- Copyright -->
		<div class="scroll-fade-in-subtle border-t border-gray-800 pt-6 sm:pt-8 text-center text-gray-400">
			<p class="text-xs sm:text-sm">&copy; {new Date().getFullYear()} {SITE_CONFIG.title}. All rights reserved.</p>
		</div>
	</div>
</footer>

