---
import Logo from '../ui/Logo.astro';
import { NAV_ITEMS } from '../../utils/constants';
import { SITE_CONFIG } from '../../config/site';

const currentPath = Astro.url.pathname;
---

<footer class="bg-white text-gray-900 py-12 sm:py-16 px-4 sm:px-6 md:px-16">
	<div class="max-w-7xl mx-auto">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 mb-8">
			<!-- Left: Logo and Copyright -->
			<div class="footer-logo-section">
				<Logo size="md" loading="lazy" />
				<p class="mt-6 text-sm text-gray-600">
					&copy; {new Date().getFullYear()} {SITE_CONFIG.title}. All rights reserved.
				</p>
			</div>
			
			<!-- Middle: Navigation Links -->
			<div class="footer-nav-section">
				<nav class="flex flex-col gap-3">
					{NAV_ITEMS.map((item) => {
						const isActive = currentPath === item.href || 
							(item.href !== '/' && currentPath.startsWith(item.href));
						return (
							<a
								href={item.href}
								data-astro-prefetch="hover"
								class={`footer-nav-link ${isActive ? 'footer-nav-link-active' : ''}`}
							>
								{item.label}
							</a>
						);
					})}
				</nav>
			</div>
			
			<!-- Right: Contact Information and Social Media -->
			<div class="footer-contact-section">
				<div class="flex flex-col gap-3 mb-6">
					<p class="text-sm text-gray-900">
						100 Sterling Mine Rd.<br />
						Sloatsburg, NY 10974
					</p>
					<a href="tel:845-792-0560" class="text-sm text-gray-900 hover:text-primary transition-colors">
						845-792-0560
					</a>
					<a href="mailto:sales@tristateawnings.com" class="text-sm text-gray-900 hover:text-primary transition-colors">
						sales@tristateawnings.com
					</a>
				</div>
				
				<!-- Social Media Icons -->
				<div class="flex gap-4">
					<a 
						href="https://www.facebook.com/TriStateAwnings/" 
						target="_blank" 
						rel="noopener noreferrer"
						aria-label="Facebook"
						class="social-icon"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
					</a>
					<a 
						href="https://www.instagram.com/tristateawnings/" 
						target="_blank" 
						rel="noopener noreferrer"
						aria-label="Instagram"
						class="social-icon"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
						</svg>
					</a>
					<a 
						href="https://www.linkedin.com/company/tristateawnings" 
						target="_blank" 
						rel="noopener noreferrer"
						aria-label="LinkedIn"
						class="social-icon"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer-logo-section {
		display: flex;
		flex-direction: column;
	}

	.footer-nav-section {
		display: flex;
		flex-direction: column;
	}

	.footer-nav-link {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 500;
		font-size: 1rem;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
		display: inline-block;
	}

	.footer-nav-link:hover {
		color: #68C28C;
	}

	.footer-nav-link-active {
		color: #68C28C;
		text-decoration: underline;
		text-underline-offset: 4px;
	}

	.footer-contact-section {
		display: flex;
		flex-direction: column;
	}

	.social-icon {
		color: #9CA3AF;
		transition: color 0.2s;
	}

	.social-icon:hover {
		color: #68C28C;
	}

	@media (max-width: 768px) {
		.footer-logo-section,
		.footer-nav-section,
		.footer-contact-section {
			margin-bottom: 2rem;
		}
	}
</style>

