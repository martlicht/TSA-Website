---
interface Props {
	backgroundImage: any;
	class?: string;
}

const { backgroundImage, class: className = '' } = Astro.props;
---

<section class={`relative w-full min-h-screen flex items-center justify-center overflow-hidden ${className}`}>
	<!-- Background Image with zoom effect -->
	<div class="absolute inset-0">
		<img 
			src={backgroundImage.src}
			alt="Background"
			class="w-full h-full object-cover scale-110"
		/>
	</div>

	<!-- Overlay: Combined effect to show image through green tint -->
	<div class="absolute inset-0 bg-gradient-to-br from-[#68C28C]/85 to-[#68C28C]/85"></div>

	<!-- Content Slot -->
	<div class="relative z-10 w-full">
		<slot />
	</div>
</section>

<style>
	/* Background image zoom effect */
	.scale-110 {
		transform: scale(1.1);
	}
</style>

