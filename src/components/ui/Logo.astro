---
import { Image } from "astro:assets";
import logoImage from "../../assets/icons/tristate-logo 1.svg";

interface Props {
  size?: "sm" | "md" | "lg";
  showText?: boolean;
  loading?: "eager" | "lazy";
}

const { size = "md", loading = "eager" } = Astro.props;

const sizeClasses = {
  sm: { logo: "h-10 sm:h-12 w-auto" },
  md: { logo: "h-12 sm:h-14 w-auto" },
  lg: { logo: "h-16 sm:h-20 w-auto" },
};

const { logo: logoSize } = sizeClasses[size];
---

<div class={`flex items-center gap-2 ${logoSize}`}>
  <Image 
    src={logoImage} 
    alt="Tri State Awnings Logo" 
    class={`${logoSize} w-auto object-contain`}
    loading={loading}
  />
</div>
