---
interface Props {
	size?: 'sm' | 'md' | 'lg';
	showText?: boolean;
}

const { size = 'md', showText = true } = Astro.props;

const sizeClasses = {
	sm: { icon: 'w-6 h-6 text-sm', text: 'text-base' },
	md: { icon: 'w-8 h-8 text-lg', text: 'text-xl' },
	lg: { icon: 'w-12 h-12 text-2xl', text: 'text-2xl' },
};

const { icon: iconSize, text: textSize } = sizeClasses[size];
---

<div class={`flex items-center gap-2 ${textSize} font-semibold text-gray-900`}>
	<span class={`${iconSize} bg-gradient-to-br from-primary to-primary-dark rounded flex items-center justify-center text-white font-bold`}>
		M
	</span>
	{showText && <span>Tri State Awnings.</span>}
</div>

