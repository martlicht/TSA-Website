---
import logoImage from "../../assets/icons/tristate-logo 1.svg";

interface Props {
  size?: "sm" | "md" | "lg";
  showText?: boolean;
}

const { size = "md", showText = true } = Astro.props;

const sizeClasses = {
  sm: { logo: "h-6 w-auto", text: "text-base" },
  md: { logo: "h-8 w-auto", text: "text-xl" },
  lg: { logo: "h-12 w-auto", text: "text-2xl" },
};

const { logo: logoSize, text: textSize } = sizeClasses[size];
---

<div class={`flex items-center gap-2 ${textSize} font-semibold text-gray-900`}>
  <img 
    src={logoImage.src} 
    alt="Tri State Awnings Logo" 
    class={`${logoSize} aspect-[158/45] object-contain`}
  />
</div>
