---
interface Props {
	variant?: 'primary' | 'secondary' | 'outline';
	size?: 'sm' | 'md' | 'lg';
	href?: string;
	class?: string;
}

const {
	variant = 'primary',
	size = 'md',
	href,
	class: className = '',
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center button-text rounded-md cursor-pointer transition-all duration-100 focus:outline-none focus:ring-2 focus:ring-offset-2 relative overflow-hidden button-shine';

const variantClasses = {
	primary: 'bg-primary text-white hover:bg-primary-dark focus:ring-primary',
	secondary: 'bg-gray-200 text-gray-900 hover:bg-gray-300 focus:ring-gray-400',
	outline: 'bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 focus:ring-white',
};

const sizeClasses = {
	sm: 'px-4 py-2',
	md: 'px-6 py-3',
	lg: 'px-8 py-4',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

{href ? (
	<a href={href} class={classes}>
		<slot />
	</a>
) : (
	<button class={classes}>
		<slot />
	</button>
)}

<style>
	/* Propiedades tipográficas del texto de los botones */
	.button-text {
		font-family: 'Inter', system-ui, sans-serif;
		font-weight: 500; /* Medium */
		font-style: normal;
		font-size: 18px;
		line-height: 145%;
		letter-spacing: -0.005em; /* -0.5% */
		text-align: center;
		vertical-align: middle;
	}

	/* Efecto de brillo metálico al hacer hover */
	.button-shine::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.4),
			rgba(255, 255, 255, 0.6),
			rgba(255, 255, 255, 0.4),
			transparent
		);
		transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		pointer-events: none;
		z-index: 1;
	}

	.button-shine:hover::before {
		left: 100%;
	}

	/* Asegurar que el contenido esté por encima del brillo */
	.button-shine > * {
		position: relative;
		z-index: 2;
	}
</style>

